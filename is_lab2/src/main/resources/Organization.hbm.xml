<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.itmo.model.Organization" table="organizations">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>

        <property name="name" type="string" column="name" not-null="true"/>

        <many-to-one name="coordinates" class="ru.itmo.model.Coordinates"
                     column="coordinates_id" not-null="true" cascade="save-update"/>

        <property name="creationDate" type="java.time.LocalDateTime" column="creation_date" not-null="true"/>

        <many-to-one name="officialAddress" class="ru.itmo.model.Address"
                     column="official_address_id" not-null="true" cascade="save-update"/>

        <property name="annualTurnover" type="double" column="annual_turnover" not-null="true"/>
        <property name="employeesCount" type="integer" column="employees_count" not-null="true"/>
        <property name="rating" type="integer" column="rating" not-null="true"/>
        <property name="type" column="type" not-null="true" length="20">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.itmo.model.OrganizationType</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <many-to-one name="postalAddress" class="ru.itmo.model.Address"
                     column="postal_address_id" cascade="save-update"/>
    </class>
</hibernate-mapping>