<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.itmo.model">
    <class name="ImportOperation" table="import_operations">
        <cache usage="nonstrict-read-write" region="importOperation"/>
        <id name="id" column="id" type="long">
            <generator class="identity"/>
        </id>

        <property name="entityType" column="entity_type" type="string" not-null="true" length="50"/>
        <property name="status" column="status" type="string" not-null="true" length="64"/>
        <property name="username" column="username" type="string" not-null="true" length="255"/>
        <property name="role" column="role" type="string" not-null="true" length="64"/>

        <property name="addedCount" column="added_count" type="integer" not-null="false"/>

        <property name="startedAt" column="started_at" type="java.time.LocalDateTime" not-null="true"/>
        <property name="finishedAt" column="finished_at" type="java.time.LocalDateTime" not-null="false"/>

        <property name="errorMessage" column="error_message" type="string" not-null="false" length="500"/>

        <property name="fileKey" column="file_key" type="string" length="512"/>
        <property name="fileName" column="file_name" type="string" length="512"/>
        <property name="fileContentType" column="file_content_type" type="string" length="255"/>
        <property name="fileSize" column="file_size" type="long"/>

    </class>
</hibernate-mapping>
